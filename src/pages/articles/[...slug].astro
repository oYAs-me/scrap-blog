---
// src/pages/articles/[...slug].astro
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Backlinks from '../../components/Backlinks.astro';
import { getAllBacklinks } from '../../utils/backlinks';
import type { BacklinkEntry } from '../../types';

// 動的ルーティングのためのパス生成
export async function getStaticPaths() {
  // articlesコレクションから全投稿を取得
  const posts = await getCollection('articles');
  const allBacklinks = await getAllBacklinks();

  return posts.map(post => ({
    params: { slug: post.slug },
    props: { 
      post,
      backlinks: allBacklinks[`articles/${post.slug}`] || []
    },
  }));
}

interface Props {
  post: CollectionEntry<'articles'>;
  backlinks: BacklinkEntry[];
}

const { post, backlinks } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title}>
  <article>
    <header>
      <h1>{post.data.title}</h1>
      <p style="color: #666;">
        {post.data.pubDate.toLocaleDateString('ja-JP')}
        {/* 技術スタックがあれば表示 */}
        {post.data.techStack && (
          <span> | {post.data.techStack.join(', ')}</span>
        )}
      </p>
      {/* ヒーローイメージがあれば表示 */}
      {post.data.heroImage && (
        <img src={post.data.heroImage} alt="" style="max-width: 100%;" />
      )}
    </header>
    
    <div class="content">
      <Content />
    </div>

    <Backlinks backlinks={backlinks} />
  </article>
</BaseLayout>