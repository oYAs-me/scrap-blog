---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllTweets } from '../../utils/tweetsParser';
import type { TweetItem, BacklinkEntry } from '../../types';
import Backlinks from '../../components/Backlinks.astro';
import { getAllBacklinks } from '../../utils/backlinks';

export async function getStaticPaths() {
  const tweets = await getAllTweets();
  const allBacklinks = await getAllBacklinks();

  return tweets.map((tweet) => {
    // tweet.slug は "yyyy-mm-dd-hh-mm-seq" 形式
    const lookupKey = `tweets/${tweet.slug}`;
    
    return {
      params: { slug: tweet.slug },
      props: { 
        tweet,
        backlinks: allBacklinks[lookupKey] || []
      },
    };
  });
}

interface Props {
  tweet: TweetItem;
  backlinks: BacklinkEntry[];
}

const { tweet, backlinks } = Astro.props;
const pageTitle = tweet.title;
---

<BaseLayout pageTitle={pageTitle}>
  <article class="tweet-detail">
    <header class="tweet-header">
      <time datetime={tweet.date.toISOString()}>
        {tweet.date.toLocaleDateString('ja-JP')} 
        {tweet.date.toLocaleTimeString('ja-JP', {hour: '2-digit', minute:'2-digit', second: '2-digit'})}
      </time>
    </header>
    
    <div class="tweet-content" set:html={tweet.htmlContent} />
    
    <footer class="tweet-footer">
      <a href="/tweets">← Back to Timeline</a>
    </footer>

    <Backlinks backlinks={backlinks} />
  </article>
</BaseLayout>

<style>
  .tweet-detail {
    max-width: 600px;
    margin: var(--space-xl) auto;
    padding: var(--space-xl);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-bg);
    /* box-shadow: var(--shadow-sm); デザインシステムに定義があれば使うが、なければ削除か変数化 */
  }
  .tweet-header {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: var(--space-lg);
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--space-sm);
  }
  .tweet-content {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: var(--space-xl);
  }
  .tweet-footer {
    margin-top: var(--space-xl);
    font-size: 0.9rem;
  }
  .tweet-footer a {
    display: inline-block;
    margin-bottom: var(--space-md);
    color: var(--color-link);
    text-decoration: none;
  }
  .tweet-footer a:hover {
    text-decoration: underline;
  }
  .source-info {
    color: var(--color-text-muted);
    font-size: 0.8rem;
  }
  /* KaTeX / Math support styling */
  .tweet-content :global(.katex-display) {
    overflow-x: auto;
    overflow-y: hidden;
  }
</style>
