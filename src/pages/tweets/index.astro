---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllTweets } from '../../utils/tweetsParser';

// パーサーを実行して全メモを取得
const tweets = await getAllTweets();
---

<BaseLayout pageTitle="Timeline">
  <div class="timeline-container">
    <div class="timeline">
      {tweets.map((tweet) => (
        <div class="tweet-card">
          <div class="tweet-meta">
            <a href={`/tweets/${tweet.slug}`} class="tweet-link">
              <time datetime={tweet.date.toISOString()}>
                {tweet.date.toLocaleDateString('ja-JP')} 
                <span class="tweet-time">{tweet.date.toLocaleTimeString('ja-JP', {hour: '2-digit', minute:'2-digit'})}</span>
              </time>
            </a>
          </div>
          
          <div class="tweet-content" set:html={tweet.htmlContent} />
          
          {/* <div class="tweet-source">
            <small>Source: {tweet.originalFile}</small>
          </div> */}
        </div>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .timeline {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  .tweet-card {
    border: 1px solid var(--color-border);
    padding: 1rem;
    border-radius: var(--radius-md);
    background: var(--color-bg);
  }
  .tweet-meta {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
  }
  .tweet-time {
    font-weight: bold;
    color: var(--color-text-main);
  }
  .tweet-content {
    font-size: 1rem;
    line-height: 1.6;
  }
  /* Markdownのpタグの余白を消す調整 */
  .tweet-content :global(p) {
    margin: 0;
  }
</style>